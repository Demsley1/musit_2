<article class="dash-card col-md-3">
    <a href="/dashboard/edit/{{id}}" class="btn-link mt-2 mx-2 p-3 edit-btn"><span class="fas fa-edit"></span></a>
    <h3 class="titles">{{title}}</h3>
    <div class="card-body">
        <ul>
           {{#each music}}
            <li class="playlist-items">
                <div class="d-flex justify-content-evenly">
                <p>{{artist}}:  {{song_title}}</p>
                <p>Genre: {{genre}}</p>
                </div>
            </li>
            {{/each}}
        </ul>

        <div>
            <button class="heart-btn"><img class="heart-icon" src="/images/heart-img.png" /></button>
            <button class="comment-btn"><img class="comment-icon" src="/images/comment-bubble.png" /></button>
            <span class="likes">{{vote_count}} people like this playlist</span>
        </div>

        <div class="comment-section">
            <div>
                <h4 class="lead text-white-50 mt-2">Comments:</h4>
                <div class="comment-container">

                </div>
            </div>

            <form class="comment-form">
                <div class="input-group">
                    <input type="text" placeholder="Add a Comment" name="comment-text" id="comment-text"
                        class="form-control" aria-describedby="comment-post"></input>
                    <button type="submit" class="comment-post" id="comment-post">submit</button>
                </div>
            </form>
        </div>
    </div>
</article>