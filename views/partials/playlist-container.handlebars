<article class="playlist-card col-md-4" id="{{id}}">
    <h3 class="titles">{{title}}</h3>
        <ul>
            {{#each music}}
            <li class="playlist-items">
                <div class="d-flex justify-content-evenly">
                <p>{{artist}}:  {{song_title}}</p>
                <p>Genre: {{genre}}</p>
                </div>
            </li>
            {{/each}}
        </ul>
        <div>
            <h4 class="titles"> Username:   {{user.username}}</h4>
            <span>{{format_date created_at}}</span>
        </div>

        

        <div class="actions">
            <button class="heart-btn pl-1"><span class="fas fa-heart"></span></button>
            <button class="comment-btn"><img class="comment-icon" src="/images/comment-bubble.png"/></button>
            {{#if vote_count}}
            <span class="likes">{{vote_count}} people like this playlist</span>
            {{/if}}
        </div>

        <div class="comment-section">
            <div>
                <h4 class="titles">Comments:</h4>
                <div class="comment-container">

                </div>
            </div>

            <form class="comment-form">
                <div class="input-group">
                    <input type="text" placeholder="Add a Comment" name="comment-text" id="comment-text" class="form-control" aria-describedby="comment-post"></input>
                    <button type="submit" class="comment-post" id="comment-post">submit</button>
                </div>
            </form>
        </div>   
</article>


